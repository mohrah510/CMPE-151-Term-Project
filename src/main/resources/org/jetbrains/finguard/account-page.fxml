<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.jetbrains.finguard.AccountPageController" alignment="CENTER" spacing="10">
    <TableView fx:id="accountTable">
        <columns>
            <TableColumn fx:id="nameColumn" text="Account Name" prefWidth="150"/>
            <TableColumn fx:id="balanceColumn" text="Balance" prefWidth="100"/>
            <TableColumn fx:id="createdAtColumn" text="Date Created" prefWidth="150"/>
        </columns>
    </TableView>
</VBox>
