<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
      stylesheets="@/style.css" fx:controller="org.jetbrains.finguard.TransactionController" alignment="CENTER" spacing="10">
    <Label text="Add New Transaction" styleClass="header-label" />
    <ComboBox fx:id="accountNameComboBox" promptText="Select account" styleClass="combo-box" />
    <ComboBox fx:id="transactionTypeComboBox" promptText="Select transaction type" styleClass="combo-box" />
    <TextField fx:id="amountField" promptText="Enter amount" styleClass="text-field" />
    <DatePicker fx:id="transactionDatePicker" promptText="Select transaction date" styleClass="date-picker" />
    <Button text="Save Transaction" onAction="#handleSaveTransaction" styleClass="button" />
    <Button text="Back to Home" onAction="#handleBackToHome" styleClass="button" />
</VBox>
