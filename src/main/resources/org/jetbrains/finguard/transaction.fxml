<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.jetbrains.finguard.TransactionController" alignment="CENTER" spacing="10">
    <Label text="Add New Transaction" />
    <ComboBox fx:id="accountNameComboBox" promptText="Select account" />
    <ComboBox fx:id="transactionTypeComboBox" promptText="Select transaction type" />
    <TextField fx:id="amountField" promptText="Enter amount" />
    <Button text="Save Transaction" onAction="#handleSaveTransaction" />
</VBox>
