<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
      stylesheets="@/style.css" fx:controller="org.jetbrains.finguard.TransactionTypeController" alignment="CENTER" spacing="10">
    <Label text="Add New Transaction Type" styleClass="header-label" />
    <TextField fx:id="typeNameField" promptText="Enter transaction type name" styleClass="text-field" />
    <Button text="Save Transaction Type" onAction="#handleSaveTransactionType" styleClass="button" />
    <Button text="Back to Home" onAction="#handleBackToHome" styleClass="button" />
</VBox>
